};

const YEARS = [1, 2, 3, 4];

const UserDetailsForm = ({ user, onComplete }) => {
  const [formData, setFormData] = useState({
    name: '',
    usn: '',
    year: '',
    branch: '',
    phone: '',
    pickupPoint: '',
  });
  const [showModal, setShowModal] = useState(false);
  const [loading, setLoading] = useState(false);
  const [showDropdown, setShowDropdown] = useState('');
  const [error, setError] = useState('');
  const [animation] = useState(new Animated.Value(0));

  // Sort pickup points alphabetically
  const sortedPickupPoints = useMemo(() => 
    Object.entries(PICKUP_POINTS).sort((a, b) => a[0].localeCompare(b[0])),
    []
  );

  const validateForm = () => {
    if (!formData.name || !formData.usn || !formData.year || !formData.branch || 
        !formData.phone || !formData.pickupPoint) {
      setError('Please fill in all fields');
      return false;
    }
    if (!/^[0-9]{10}$/.test(formData.phone)) {
      setError('Please enter a valid 10-digit phone number');
      return false;
    }
    if (!/^[1-4][A-Z]{2}[0-9]{2}[A-Z]{2}[0-9]{3}$/.test(formData.usn.toUpperCase())) {
      setError('Please enter a valid USN');
      return false;
    }
    return true;
  };

  const handleSubmit = async () => {
    if (!validateForm()) return;

    setLoading(true);
    setError('');

    try {
      const response = await axios.post('http://10.247.172.187:5000/api/user-details', {
        ...formData,
        userId: user.userId,
        busRoute: PICKUP_POINTS[formData.pickupPoint]
      });

      if (response.data.success) {
        setShowModal(true);
      }
    } catch (err) {
      setError(err.response?.data?.error || 'An error occurred');
    } finally {
      setLoading(false);
    }
  };

  const renderDropdown = (items, value, onChange, placeholder) => (
    <View style={styles.dropdownContainer}>
      <TouchableOpacity 
        style={styles.dropdownButton}
        onPress={() => setShowDropdown(placeholder)}
      >
        <Text style={[styles.dropdownButtonText, !value && styles.placeholder]}>
          {value || placeholder}
        </Text>
      </TouchableOpacity>

      {showDropdown === placeholder && (
        <View style={styles.dropdownList}>
          <ScrollView style={{ maxHeight: 200 }}>
            {items.map((item, index) => (
              <TouchableOpacity
                key={index}
                style={styles.dropdownItem}
                onPress={() => {
                  onChange(typeof item === 'object' ? item[0] : item);
                  setShowDropdown('');
                }}
              >
                <Text style={styles.dropdownItemText}>
                  {typeof item === 'object' ? item[0] : item}
                </Text>
              </TouchableOpacity>
            ))}
          </ScrollView>
        </View>
      )}
    </View>
  );

  return (
    <LinearGradient
      colors={['#1e293b', '#0f172a', '#312e81']}
      style={styles.container}
    >
      <ScrollView style={styles.scrollView}>
        <View style={styles.content}>
          <View style={styles.header}>
            <GraduationCap size={40} color="#60a5fa" />
            <Text style={styles.title}>Student Details</Text>
            <Text style={styles.subtitle}>Please complete your profile</Text>
          </View>

          {error ? (
            <View style={styles.errorContainer}>
              <Text style={styles.errorText}>{error}</Text>
            </View>
          ) : null}

          <View style={styles.form}>
            {/* Name Input */}
            <View style={styles.inputGroup}>
              <User style={styles.icon} size={20} color="#60a5fa" />
              <TextInput
                style={styles.input}
                placeholder="Full Name"
                placeholderTextColor="#94a3b8"
                value={formData.name}
                onChangeText={(text) => setFormData({ ...formData, name: text })}
              />
            </View>

            {/* USN Input */}
            <View style={styles.inputGroup}>
              <Code style={styles.icon} size={20} color="#60a5fa" />
              <TextInput
                style={styles.input}
                placeholder="USN"
                placeholderTextColor="#94a3b8"
                value={formData.usn}
                onChangeText={(text) => setFormData({ ...formData, usn: text.toUpperCase() })}
                autoCapitalize="characters"
              />
            </View>

            {/* Year Dropdown */}
            <View style={styles.inputGroup}>
              <Book style={styles.icon} size={20} color="#60a5fa" />
              {renderDropdown(
                YEARS,
                formData.year ? `Year ${formData.year}` : '',
                (year) => setFormData({ ...formData, year }),
                'Select Year'
              )}
            </View>

            {/* Branch Dropdown */}
            <View style={styles.inputGroup}>
              <Code style={styles.icon} size={20} color="#60a5fa" />
              {renderDropdown(
                BRANCHES,
                formData.branch,
                (branch) => setFormData({ ...formData, branch }),
                'Select Branch'
              )}
            </View>

            {/* Phone Input */}
            <View style={styles.inputGroup}>
              <Phone style={styles.icon} size={20} color="#60a5fa" />
              <TextInput
                style={styles.input}
                placeholder="Phone Number"
                placeholderTextColor="#94a3b8"
                value={formData.phone}
                onChangeText={(text) => setFormData({ ...formData, phone: text })}
                keyboardType="phone-pad"
                maxLength={10}
              />
            </View>

            {/* Pickup Point Dropdown */}
            <View style={styles.inputGroup}>
              <MapPin style={styles.icon} size={20} color="#60a5fa" />
              {renderDropdown(
                sortedPickupPoints,
                formData.pickupPoint,
                (point) => setFormData({ ...formData, pickupPoint: point }),
                'Select Pickup Point'
              )}
            </View>

            <TouchableOpacity
              style={[styles.submitButton, loading && styles.submitButtonDisabled]}
              onPress={handleSubmit}
              disabled={loading}
            >
              {loading ? (
                <ActivityIndicator color="#fff" />
              ) : (
                <Text style={styles.submitButtonText}>Submit Details</Text>
              )}
            </TouchableOpacity>
          </View>
        </View>
      </ScrollView>

      {/* Success Modal */}
      <Modal
        visible={showModal}
        transparent
        animationType="fade"
      >
        <View style={styles.modalOverlay}>
          <View style={styles.modalContent}>
            <CheckCircle size={50} color="#22c55e" style={styles.successIcon} />
            <Text style={styles.modalTitle}>Details Submitted!</Text>
            
            <View style={styles.detailsContainer}>
              <Text style={styles.detailLabel}>Name:</Text>
              <Text style={styles.detailValue}>{formData.name}</Text>
              
              <Text style={styles.detailLabel}>USN:</Text>
              <Text style={styles.detailValue}>{formData.usn}</Text>
              
              <Text style={styles.detailLabel}>Year:</Text>
              <Text style={styles.detailValue}>{formData.year}</Text>
              
              <Text style={styles.detailLabel}>Branch:</Text>
              <Text style={styles.detailValue}>{formData.branch}</Text>
              
              <Text style={styles.detailLabel}>Phone:</Text>
              <Text style={styles.detailValue}>{formData.phone}</Text>
              
              <Text style={styles.detailLabel}>Pickup Point:</Text>
              <Text style={styles.detailValue}>{formData.pickupPoint}</Text>
              
              <Text style={styles.detailLabel}>Allocated Bus Route:</Text>
              <Text style={styles.detailValue}>Route {PICKUP_POINTS[formData.pickupPoint]}</Text>
            </View>

            <TouchableOpacity
              style={styles.continueButton}
              onPress={() => {
                setShowModal(false);
                onComplete(formData);
              }}
            >
              <Text style={styles.continueButtonText}>Continue to Dashboard</Text>
            </TouchableOpacity>
          </View>
        </View>
      </Modal>
    </LinearGradient>
  );
};

